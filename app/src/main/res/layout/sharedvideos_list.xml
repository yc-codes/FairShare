<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/sharedVideoImageID"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:background="@drawable/videothumbnail" />

            <TextView
                android:id="@+id/sharedVideoTitleID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/sharedVideoImageID"
                android:padding="5dp"
                android:text="Video Title"
                android:textColor="#3C40C6"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sharedVideoDescpID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sharedVideoTitleID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/sharedVideoImageID"
                android:padding="5dp"
                android:text="Video Description"
                android:textColor="#3C40C6"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharedVideoOptionID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="&#8942;"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <TextView
            android:id="@+id/sharedVideoSharedByID"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/sharedVideoDescpID"
            android:textColor="#3C40C6"
            android:text="@string/sharedby"
            android:padding="5dp"
            android:layout_toRightOf="@id/sharedVideoImageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
            android:id="@+id/sharedVideoUsernameID"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/sharedVideoDescpID"
            android:textColor="#3C40C6"
            android:text="username"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_toRightOf="@id/sharedVideoSharedByID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <!--<TextView-->
                <!--android:id="@+id/sharedVideoFileNameID"-->
                <!--android:textSize="18sp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_below="@id/sharedVideoDescpID"-->
                <!--android:textColor="#3C40C6"-->
                <!--android:text="Filename"-->
                <!--android:padding="5dp"-->
                <!--android:layout_toRightOf="@id/sharedVideoImageID"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>